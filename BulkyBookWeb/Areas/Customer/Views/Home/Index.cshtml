@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {<div class="col-lg-3 col-md-6 pt-4">
        <div class="row p-2">
            <div class="col-12 p-2">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top rounded"/>
                    <div class="card-body">
                        <div>
                            <p class="card-title h5 text-primary">@product.Title</p>
                            <p class="card-title text-info">by <b>@product.Author</b></p>
                        </div>
                        <div>
                            <p class="pl-1">List Price: <strike><b>Rs.@product.ListPrice.ToString("0.00")</b></strike></p>
                
                        </div>
                        <div>
                            <p class="pl-1">As low as: <b>Rs.@product.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
     </div>
    }
</div>
