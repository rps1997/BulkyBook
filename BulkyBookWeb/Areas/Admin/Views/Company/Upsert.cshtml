@model Company
@*@model BulkyBook.Models.ViewModels.ProductVM*@

<form method="post" asp-action="Upsert" >
    <input asp-for="Id" hidden></input>
    @*<input asp-for="product.ImageUrl" hidden></input>*@
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row" >
        <div class="col-12 pb-2">
            <h2 class="text-primary">
                @(Model.Id!=0?"Update": "Create") Company
            </h2>
            <hr></hr>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span> 
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control"></input>
            <span asp-validation-for="City" class="text-danger"></span> 
        </div>
        <div class="mb-3">
            <label asp-for="StreetAddress"></label>
            <textarea asp-for="StreetAddress" rows="3" class="form-control"></textarea>
            <span asp-validation-for="StreetAddress" class="text-danger"></span> 
        </div>
        <div class="mb-3 col-6">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control"></input>
            <span asp-validation-for="State" class="text-danger"></span> 
        </div>
        <div class="mb-3 col-6">
            <label asp-for="PostalCOde"></label>
            <input asp-for="PostalCOde" class="form-control"></input>
            <span asp-validation-for="PostalCOde" class="text-danger"></span> 
        </div>
        <div class="mb-3 col-6">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control"></input>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span> 
        </div>
        <div class="col-12">
            @if (Model.Id != 0)
            {
                <button type="submit" class="btn btn-primary" stype="width:150px">Update</button>
            }
            else
            {
               <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" stype="width:150px">Create</button> 
            }
        <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
        </div>
    </div>
    </div>
   
    
</form>
